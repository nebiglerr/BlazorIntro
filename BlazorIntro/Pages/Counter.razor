@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click Plus</button>
<button class="btn btn-primary" @onclick="IncrementCountEx">Click Ex</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    private void IncrementCountEx()
    {
        currentCount--;
    }
}

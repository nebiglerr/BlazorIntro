@layout MainLayoutDef
@page "/productadd"
@using BlazorIntro.Models
<EditForm Model="@productAddModel" OnValidSubmit="@HandleSave">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <h4> Ürün Adı</h4>
    <InputText id="productName" @bind-Value="@productAddModel.ProductName" />
    <ValidationMessage For="@(() => productAddModel.ProductName)" />
    <h4> Ürün Açıklaması</h4>
    <InputText id="description" @bind-Value="@productAddModel.Description" />
    <ValidationMessage For="@(() => productAddModel.Description)" />
    <button type="submit">Kaydet</button>
    <h4>Kategori</h4>
    <InputSelect id="categoryId" @bind-Value="@productAddModel.CategoryId">
        <option value="1">içecek</option>
        <option value="2">Yiyecek</option>

    </InputSelect>
    <ValidationMessage For="@(() => productAddModel.CategoryId)" />
</EditForm>


@code {

    ProductAddModel productAddModel = new ProductAddModel();
    private void HandleSave()
    {
        Console.WriteLine("Ürün Eklendi" + productAddModel.ToString());
    }
}
